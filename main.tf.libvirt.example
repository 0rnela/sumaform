provider "libvirt" {
    uri = "qemu:///system"
}

variable "cc_username" {
  description = "SCC or NCC username"
  default = "UC7"
}

variable "cc_password" {
  description = "SCC or NCC password"
  default = // add password here
}

module "images" {
  source = "./libvirt_images"
}

