{
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/base.sh",
      "scripts/cleanup.sh",
      "scripts/zerodisk.sh"
    ],
    "override": {
      "centos-6-cloud-kvm": {
        "execute_command": "sh '{{.Path}}'"
      }
    }
  }],
  "builders": [{
      "name": "centos-6-cloud-kvm",
      "type": "qemu",
      "iso_checksum": "5458f357e8a55e3a866dd856896c7e0ac88e7f9220a3dd74c58a3b0acede8e4d",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirror.nsc.liu.se/centos-store/6.6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
      "output_directory": "output",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now",
      "disk_size": 1200,
      "format": "raw",
      "qemuargs": [
        [ "-m", "1024M" ],
        ["-machine", "type=pc,accel=kvm"],
        ["-device", "virtio-net-pci,netdev=user.0"]
      ],
      "headless": true,
      "accelerator": "kvm",
      "http_directory": "http",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "changeme",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vm_name": "centos6_openstack",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks_cloud_centos.cfg<enter><wait>"
      ]
    }]
}
